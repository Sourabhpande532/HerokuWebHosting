<script>

  const getcurrentdate = () => {
  const weekday = [
    "Sunday",
    "Monday",
    "Tuesday",
    "Wednesday",
    "Thursday",
    "Friday",
    "Saturday",
  ];

  let currentTd = new Date();
  // console.log(weekday[currentTd.getDay()])
  let day = weekday[currentTd.getDay()];
  let  d = document.getElementById("day");

  d.innerHTML = day;

};
getcurrentdate();

const getcurrentTime = () => {
  const months = [
    "Jan",
    "Feb",
    "Mar",
    "Apr",
    "May",
    "June",
    "July",
    "Aug",
    "Sep",
    "Oct",
    "Nov",
    "Dec",
  ];
  let now = new Date();
  var month = months[now.getMonth()];
  var date = now.getDate();
let  d = document.getElementById("today_datas");
d.innerHTML = `${date} ${month}`}
getcurrentTime();



</script>
